<form action="/power" method="get">
  <label for="number">Enter Number</label>
  <input type="text" name="number" placeholder ="Enter the number">
  <label for="power">To the power of</label>
  <input type="text" name="power" placeholder ="to the power of">
  <input type="submit">
</form>
<% if @result%>
<p><%= @number %> to the power of <%= @power %> is <%= @result %></p>
<% end %>